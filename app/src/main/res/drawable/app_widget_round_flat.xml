<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded top layer -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/teal" /> <!-- Replace with your desired color -->
        </shape>
    </item>
    <!-- Flat bottom layer -->
    <item android:top="48dp"> <!-- Adjust the value based on the desired height of the rounded top -->
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" />
            <solid android:color="@color/selected_item_background" /> <!-- Replace with your desired color -->
        </shape>
    </item>
</layer-list>
