<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Name" />

        <EditText
            android:id="@+id/editTaskNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Description" />

        <EditText
            android:id="@+id/editTaskDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date and Time (dd/MM/yy HH:mm)" />

        <EditText
            android:id="@+id/editTaskDateTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due Date and Time (dd/MM/yy HH:mm)" />

        <EditText
            android:id="@+id/editTaskDueDateTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration (minutes)" />

        <EditText
            android:id="@+id/editTaskDurationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>
