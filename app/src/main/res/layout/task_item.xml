<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/taskNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/taskStatusButton"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_weight="0"
            android:backgroundTint="#62D2FD"
            android:text="Pending"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/taskDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/taskDateTimeLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start: " />

        <TextView
            android:id="@+id/taskDateTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/taskDueDateTimeLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline: "
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/taskDueDateTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/taskDurationLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Duration: " />

        <TextView
            android:id="@+id/taskDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

